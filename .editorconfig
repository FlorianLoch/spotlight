root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown: allow trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML (e.g., .yml config files)
[*.yml]
indent_size = 2

# SCSS/CSS
[*.{scss,css}]
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,ts,json}]
indent_size = 2

# HTML
[*.html]
indent_size = 2
